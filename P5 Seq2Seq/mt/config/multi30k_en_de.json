{
  "dataset": "multi30k_en_de",
  "ckpdir": "ckpoint",
  "logdir": "log",
  
  "batch_size": 128,
  "max_len": 256,
  "d_model": 512,
  "n_layers": 6,
  "n_heads": 8,
